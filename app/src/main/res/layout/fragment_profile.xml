<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ProfileFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bunga_profil"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_profil"/>

    <ImageView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_setings"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/profile_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/profile_info"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="usia"
        android:textSize="20dp"
        android:layout_gravity="center|left"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="berat"
        android:textSize="20dp"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginTop="30dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tinggi"
        android:textSize="20dp"
        android:layout_gravity="center|right"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/tipe_diet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/tipe_diet_ic"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:clickable="true"
        android:focusable="true"/>

    <ImageView
        android:id="@+id/dokter_fav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/dokter_fav_profil"
        android:layout_gravity="center"
        android:layout_marginTop="215dp"
        android:clickable="true"
        android:focusable="true"/>
    <Button
        android:id="@+id/button_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="30dp"/>

</FrameLayout>