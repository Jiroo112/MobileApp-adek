<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Fragment.SearchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Search EditText -->
        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext"
            android:hint="Search..." />

        <!-- Resep TextView -->
        <TextView
            android:id="@+id/textResep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Resep"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Horizontal ScrollView for Resep Images -->
        <HorizontalScrollView
            android:id="@+id/horizontalScrollViewResep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/makanan_berat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_makanan_berat" />

                <ImageView
                    android:id="@+id/minuman_sehat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="-10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_minuman_sehat" />

                <ImageView
                    android:id="@+id/desert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_desert" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Olahraga TextView -->
        <TextView
            android:id="@+id/textOlahraga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Olahraga"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Horizontal ScrollView for Olahraga Images -->
        <HorizontalScrollView
            android:id="@+id/horizontalScrollViewOlahraga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/kardio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/kardio" />

                <ImageView
                    android:id="@+id/kekuatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/kekuatan" />

                <ImageView
                    android:id="@+id/interval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/interval" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Artikel TextView -->
        <TextView
            android:id="@+id/textArtikel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Artikel"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Artikel items -->
        <include
            android:id="@+id/artikel1"
            layout="@layout/item_artikel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp" />
        <include
            android:id="@+id/artikel2"
            layout="@layout/item_artikel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp" />

        <!-- Tampilkan Lebih Image -->
        <ImageView
            android:id="@+id/tampilkan_lebih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/tampilkan_lebih"/>

    </LinearLayout>
</ScrollView>
