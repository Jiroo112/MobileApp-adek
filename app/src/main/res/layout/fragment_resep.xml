<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.ResepFragment">

    <ImageView
        android:id="@+id/imageResep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/resep" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_makanan_berat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_filter"
            android:padding="10dp"
            android:text="makanan berat">

        </Button>

        <Button
            android:id="@+id/btn_desert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_filter"
            android:padding="10dp"
            android:text="Dessert"></Button>

        <Button
            android:id="@+id/btn_minuman_sehat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_filter"
            android:padding="10dp"
            android:text="Minuman Sehat"></Button>
    </LinearLayout>

    <include
        android:id="@+id/susu_stroberi"
        layout="@layout/item_resep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"/>

    <include
        android:id="@+id/es_jeruk"
        layout="@layout/item_resep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"/>

    <include
        android:id="@+id/es_teh"
        layout="@layout/item_resep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"/>

</LinearLayout>
