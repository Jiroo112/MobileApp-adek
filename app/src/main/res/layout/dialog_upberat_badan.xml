<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_dialog_background"
    android:padding="16dp"
    android:elevation="8dp"
    android:orientation="vertical"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diet Menambah Berat Badan"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diet menambah berat badan dirancang untuk individu yang ingin meningkatkan massa tubuh secara sehat dan berkelanjutan. Tujuan utamanya adalah menambah berat badan dengan membangun massa otot dan lemak sehat."
            android:textColor="#333333"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Karakteristik Diet:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_bullet_point"
                android:drawablePadding="8dp"
                android:padding="2dp"
                android:layout_marginLeft="10dp"
                android:text="Konsumsi kalori lebih tinggi (20% di atas kebutuhan harian)"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_bullet_point"
                android:drawablePadding="8dp"
                android:padding="2dp"
                android:layout_marginLeft="10dp"
                android:text="Porsi protein lebih tinggi untuk pembangunan otot"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_bullet_point"
                android:drawablePadding="8dp"
                android:padding="2dp"
                android:layout_marginLeft="10dp"
                android:text="Fokus pada makanan bergizi dengan sumber protein dan karbohidrat kompleks"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_bullet_point"
                android:drawablePadding="8dp"
                android:padding="2dp"
                android:layout_marginLeft="10dp"
                android:text="Dianjurkan kombinasi latihan kekuatan dan asupan nutrisi seimbang"
                android:textColor="#333333"/>

            <Button
                android:id="@+id/btn_close"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:text="Tutup"
                android:textSize="18sp"
                android:backgroundTint="@color/hijau_tua"
                android:textColor="@android:color/white"
                android:elevation="4dp"
                android:layout_marginHorizontal="32dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>