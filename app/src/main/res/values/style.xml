<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Gaya aplikasi yang sudah ada -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Kustomisasi tema aplikasi Anda di sini -->
    </style>

    <!-- Gaya baru untuk dialog layar penuh -->
    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="RoundedDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <!-- Gaya-gaya lain yang mungkin Anda miliki -->

</resources>